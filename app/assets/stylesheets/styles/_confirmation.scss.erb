.loading{
    display: none;
	width:100%;
	padding: 10px 0px 10px 0px;
	color: black;
	margin: auto;
	margin-bottom:10px;
	border-radius:5px;
	span:nth-child(1) {
	    opacity: 0;
	    -webkit-animation: point 1.3s infinite;
	    -webkit-animation-delay: 0.0s;
	    animation: point 1.3s infinite;
	    animation-delay: 0.0s;

	}
	span:nth-child(2) {
	    opacity: 0;
	    -webkit-animation: point 1.3s infinite;
	    -webkit-animation-delay: 0.2s;
	    animation: point 1.3s infinite;
	    animation-delay: 0.2s;
	}
	span:nth-child(3) {
	    opacity: 0;
	    -webkit-animation: point 1.3s infinite;
	    -webkit-animation-delay: 0.3s;
	    animation: point 1.3s infinite;
	    animation-delay: 0.3s;
    }
}

@keyframes point{
	0% {
        opacity: 0;
    }
    50% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

@-webkit-keyframes point{
	0% {
        opacity: 0;
    }
    50% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}